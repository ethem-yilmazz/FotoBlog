@model List<Gonderi>
@{
	ViewData["Title"] = "Home Page";
}


<div class="gonderiler">
	@if (Context.Request.Query["sonuc"] == "eklendi")
	{
		<div class="alert alert-success">
			Gönderi eklendi
		</div>
	}
	<div class="d-flex">
		<a asp-action="Yeni" asp-controller="Gonderiler" class="btn btn-success ms-auto mb-2">Yeni Gönderi Ekle</a>
	</div>
	@foreach (var item in Model)
	{
		<div class="mb-4">
			<h4>@item.Baslik</h4>
			<img class="w-100" src="~/img/upload/@item.ResimYolu" />
		</div>
	}
</div>